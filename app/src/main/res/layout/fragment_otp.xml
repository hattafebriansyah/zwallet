<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.otp.OtpFragment"
    android:background="@color/backgroundColor">


        <TextView
            android:id="@+id/textLogo"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextView.Logo"
            android:layout_marginTop="100dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerForm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_auth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textLogo">

            <TextView
                android:id="@+id/textInputOtp"
                android:text="@string/text_input_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                style="@style/TextView.Logo"
                android:textColor="@color/darkGreyColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textInputOtpDesc"
                android:text="@string/text_input_otp_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputOtp"
                style="@style/TextView.SplashScreen.Description"
                android:textColor="@color/darkGreyColor"/>



            <LinearLayout
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputOtpDesc">

                <EditText
                    android:id="@+id/otp1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/otp2"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="1">
                </EditText>
                <EditText
                    android:id="@+id/otp3"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/otp4"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/otp5"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:inputType="number">
                </EditText>
                <EditText
                    android:id="@+id/otp6"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/background_change_pin"
                    android:textColor="@color/black"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="1">
                </EditText>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                android:text="@string/text_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                android:paddingHorizontal="24dp"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:background="@drawable/background_button_auth"
                style="@style/TextView.Medium"
                android:textAllCaps="false"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

