<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.main.profile.ChangePinNewFragment"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textBtnChangePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Change PIN"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/changePinDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="16sp"
        android:text="@string/change_pin_new_desc"
        android:textColor="@color/darkGreyColor"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePinDesc">

        <EditText
            android:id="@+id/pin1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="1">
        </EditText>
        <EditText
            android:id="@+id/pin3"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin4"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin5"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/pin6"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/background_change_pin"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionDone">
        </EditText>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangePin"
        android:text="@string/textBtnChangePin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:paddingHorizontal="24dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffffff"
        android:background="@drawable/background_button_auth"
        style="@style/TextView.Medium"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>