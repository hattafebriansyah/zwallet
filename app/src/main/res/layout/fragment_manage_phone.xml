        android:id="@+id/btnSubmit"
        android:text="@string/text_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:paddingHorizontal="24dp"
        android:layout_margin="16dp"
